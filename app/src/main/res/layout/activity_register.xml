<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.asiff.regsys.Register">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="নাম" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextName" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="পাসওয়ার্ড" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/editTextPassword" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" জেলা " />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:id="@+id/editTextDistrict" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="থানা " />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/editTextThana" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="গ্রাম " />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/editTextVillage" />





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="জাতীয় পরিচিতি নম্বর " />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/editTextNid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="নৌকার পরিচিতি নম্বর " />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextVasselNum" />


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="নিবন্ধন করুন "
            android:id="@+id/buttonRegister" />



    </LinearLayout>
    </ScrollView>
</RelativeLayout>
