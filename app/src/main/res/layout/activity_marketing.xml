            android:layout_toStartOf="@+id/scrollView" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/KeditTextRui"

            android:hint="                                          রুই"

            android:layout_below="@+id/editTextIlish"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editTextIlish"
            android:layout_alignEnd="@+id/editTextIlish" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/KeditTextKtla"
            android:hint="                                         কাতলা"
